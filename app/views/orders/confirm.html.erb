<%= render "shared/navbar" %>

<!DOCTYPE html>
<html>
<head>
  <title>Order Confirmation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: system-ui, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
      color: #111;
    }

    .container {
      max-width: 480px;
      margin: 0 auto;
      padding: 1.5rem;
      background-color: #fff;
      min-height: 100vh;
    }

    h1 {
      font-size: 1.5rem;
      margin-bottom: 0.25rem;
    }

    .greeting {
      margin-bottom: 1rem;
      font-size: 0.9rem;
      color: #444;
    }

    .section {
      margin-bottom: 1.25rem;
    }

    .section strong {
      display: block;
      margin-bottom: 0.25rem;
    }

    .item-card {
      background-color: #d2c7c7;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }

    .item-card p {
      margin: 0.25rem 0;
      font-size: 0.95rem;
    }

    .small {
      font-size: 0.85rem;
      color: #666;
    }

    .footer {
      margin-top: 2rem;
      font-size: 0.85rem;
      color: #444;
    }

    .footer p {
      margin-bottom: 0.5rem;
    }

    textarea {
      width: 100%;
      height: 2.5rem;
      margin-top: 0.5rem;
      border: none;
      padding: 0.5rem;
      border-radius: 6px;
      font-size: 0.9rem;
      background-color: #fff;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Hi <%= current_user.name || "there" %>,</h1>
    <p class="greeting">
      Thank you for your purchase! We’re happy to confirm that we've received your order.
    </p>

    <div class="section">
      <strong>Order Number:</strong> #<%= @order.id %>
      <strong>Order Date:</strong> <%= @order.created_at.strftime("%B %-d, %Y") %>
    </div>

    <div class="section">
      <strong>Shipping To:</strong>
      <p><%= current_user.address %></p>
    </div>

    <div class="section">
      <strong>Items Ordered:</strong>
      <% @order.basket.basket_items.includes(:product).each do |item| %>
        <div class="item-card">
          <p><%= item.quantity %> x <%= item.product.name %></p>
          <textarea placeholder="Enter pharmacy name"></textarea>
        </div>
      <% end %>
    </div>

    <div class="section">
      <strong>Estimated delivery:</strong> <%= (@order.created_at + 20.minutes).strftime("%B %-d, %Y") %>
    </div>

    <div class="footer">
      <p>You'll receive another email with tracking details once your order ships.</p>
      <p>Thank you for shopping with us!<br>— The MedFly Team</p>
      <%= link_to "My Account", my_account_path, class: "btn-primary text-decoration-none" %>
    </div>
  </div>
</body>
</html>
