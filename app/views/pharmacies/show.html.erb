<h1><%= @pharmacy.name %></h1>
<h2>Products</h2>
<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <strong><%= product.name %></strong><br>
        Description: <%= product.description %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products available for this pharmacy.</p>
<% end %>
