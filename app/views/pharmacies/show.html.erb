<div class="container py-5" style="background-color: #f0f8ff;"> <!-- AliceBlue (skyish white) -->
  <div class="text-center mb-5">
    <h1 class="display-5 fw-bold text-primary"><%= @pharmacy.name %></h1>
    <p class="lead text-muted"><%= @pharmacy.description %></p>
  </div>

  <div class="text-center mb-4">
    <%= link_to "Write a Review", new_pharmacy_review_path(@pharmacy), class: "btn btn-outline-primary" %>
  </div>

  <h2 class="text-center text-primary mb-4">Available Products</h2>

  <% if @products.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @products.each do |product| %>
        <div class="col d-flex">
          <div class="card shadow-sm w-100">
            <div class="card-image">
            <%= cl_image_tag product.images.first.key, height: 300, width: 400, crop: :fill %>
          </div>
            <div class="card-body d-flex flex-column text-center">
              <h5 class="card-title text-primary"><%= product.name %></h5>
              <% if product.price.present? %>
                <p class="card-text text-muted">Price: $<%= product.price %></p>
              <% end %>
              <p class="card-text"><%= product.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4">
      No products available for this pharmacy.
    </div>
  <% end %>
</div>
<h1><%= @pharmacy.name %></h1>
<h2>Products</h2>
<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <strong><%= product.name %></strong><br>
        Description: <%= product.description %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products available for this pharmacy.</p>
<% end %>
