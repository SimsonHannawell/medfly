<style>
  body {
    background-color: #f9fafb;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding-bottom: 120px;
  }

  .pharmacy-header {
    text-align: center;
    padding: 2rem 1rem;
    background: white;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .pharmacy-header h1 {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
    color: #111827;
  }

  .products-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    padding: 2rem;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    padding: 1.2rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .product-name {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .product-description {
    font-size: 0.95rem;
    color: #4b5563;
    margin-bottom: 0.8rem;
  }

  .product-price {
    font-weight: bold;
    margin-bottom: 0.8rem;
    font-size: 1rem;
  }

  .qty-form {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .qty-form input {
    width: 60px;
    padding: 0.4rem;
    border-radius: 8px;
    border: 1px solid #d1d5db;
    text-align: center;
  }

  .add-btn {
    background-color: #2563eb;
    color: white;
    border: none;
    padding: 0.75rem 0;
    font-size: 1rem;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
    width: 100%;
  }

  .add-btn:hover {
    background-color: #1e40af;
  }

  .basket-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #111827;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    z-index: 1000;
  }

  .basket-bar a {
    background: #2563eb;
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .basket-bar a:hover {
    background: #1e40af;
  }
</style>

<div class="pharmacy-header">
  <h1><%= @pharmacy.name %></h1>
  <p><%= @pharmacy.location %></p>
  <p><%= @pharmacy.description %></p>
</div>

<div class="products-container">
  <% @pharmacy.pharmacy_products.includes(:product).each do |pp| %>
    <div class="product-card">
      <div>
        <div class="product-name"><%= pp.product.name %></div>
        <div class="product-description"><%= pp.product.description %></div>
        <div class="product-price">£<%= sprintf('%.2f', pp.price.to_f) %></div>
        <p>Available: <%= pp.quantity %> in stock</p>
      </div>

      <%= form_with url: pharmacy_basket_items_path(@pharmacy), method: :post, local: true do |f| %>
        <div class="qty-form">
          <%= number_field_tag :quantity, 1, min: 1, max: pp.quantity, class: "qty-input" %>
          <%= hidden_field_tag :pharmacy_product_id, pp.id %>
        </div>
        <%= f.submit "Add to Basket", class: "add-btn" %>
      <% end %>
    </div>
  <% end %>
</div>

<% if current_user&.basket&.basket_items&.any? %>
  <% subtotal = current_user.basket.basket_items.sum { |item| item.pharmacy_product.price * item.quantity } + 10 %>
  <div class="basket-bar">
    <span>Subtotal: £<%= sprintf('%.2f', subtotal) %> (incl. £10 delivery)</span>
    <%= link_to "Go to Basket", basket_path(current_user.basket), class: "btn" %>
  </div>
<% end %>

