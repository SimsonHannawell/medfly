
<style>
  /* Container */
  .container1 {
    padding: 16px;
    background-color: #f0f8ff;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Headings */
  h1 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 16px;
    text-align: center;
  }
  h2 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 12px;
  }
  h3 {
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 1.125rem;
  }

  /* Pharmacy details form container */
  .pharmacy-details {
    background: white;
    padding: 24px;
    border-radius: 16px;
    box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
    margin-bottom: 24px;
  }

  /* Form grid */
  .form-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }
  @media (min-width: 768px) {
    .form-grid {
      grid-template-columns: 1fr 1fr;
    }
  }


  /* Flex container for section heading and button */
  .flex-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  /* Product grid */
  .products-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }
  @media (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Product card */
  .product-card {
    background: white;
    padding: 16px;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
    transition: box-shadow 0.2s ease;
  }
  .product-card:hover {
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.15);
  }
    .product-image {
    width: 100%;
    height: 220px; /* slightly taller than 200px */
    object-fit: cover;
    object-position: center center; /* center the image */
    border-radius: 12px;
    margin-bottom: 12px;
  }

  .product-description {
    font-size: 0.9rem;
    margin-bottom: 12px;
    color: #444;
  }


  .btn-theme {
    background: linear-gradient(135deg, #28a745, #218838);
    border: none;
    box-shadow: 0 4px 10px rgba(40, 167, 69, 0.4);
    padding: 0.5rem 1.5rem;
    font-weight: 600;
    border-radius: 12px;
    color: white !important;
    transition: background 0.3s ease, box-shadow 0.3s ease;
    box-sizing: border-box;
    min-width: 110px;
  }
  .btn-theme:hover,
  .btn-theme:focus {
    background: linear-gradient(135deg, #218838, #1e7e34);
    box-shadow: 0 6px 14px rgba(33, 136, 52, 0.6);
    outline: none;
    color: white !important;
  }

  /* Add some spacing for buttons inside forms */
  .btn-theme.form-submit {
    margin-top: 16px;
  }

    /* Blue variant for Update Pharmacy and Edit Product buttons */
  .btn-theme-blue {
    background: linear-gradient(135deg, #007bff, #0056b3);
    border: none;
    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.4);
    padding: 0.5rem 1.5rem;
    font-weight: 600;
    border-radius: 12px;
    color: white !important;
    transition: background 0.3s ease, box-shadow 0.3s ease;
    box-sizing: border-box;
    min-width: 110px;
  }
  .btn-theme-blue:hover,
  .btn-theme-blue:focus {
    background: linear-gradient(135deg, #0056b3, #004085);
    box-shadow: 0 6px 14px rgba(0, 86, 179, 0.6);
    outline: none;
    color: white !important;
  }

  /* Modal dialog vertical and horizontal center */
  .modal-dialog {
    max-width: 600px;
    margin: auto; /* horizontal center */
    /* Use flexbox trick for vertical centering */
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100vh; /* full viewport height */
  }

  /* Remove default Bootstrap modal padding on modal-content to avoid extra space */
  .modal-content {
    border-radius: 16px;
    border: none;
    background: #fff;
    padding: 1.5rem 2rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    max-height: 90vh;
    overflow-y: auto;
  }

  /* Modal header */
  .modal-header {
    border-bottom: none;
    padding-bottom: 0;
  }

  .modal-title {
    font-weight: 700;
    font-size: 1.25rem;
    color: #333;
  }

  .btn-close {
    filter: brightness(0.4);
    transition: filter 0.3s ease;
  }
  .btn-close:hover {
    filter: brightness(1);
  }

  /* Modal body */
  .modal-body {
    padding-top: 1rem;
    color: #555;
    font-size: 1rem;
  }

  /* Modal footer buttons */
  .modal-footer {
    border-top: none;
    padding-top: 1rem;
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem;
  }

  /* Style form inputs inside modal */
  .modal-body .form-control,
  .modal-body .form-select {
    border-radius: 8px;
    box-shadow: inset 0 1px 3px rgb(0 0 0 / 0.1);
    transition: box-shadow 0.3s ease;
  }
  .modal-body .form-control:focus,
  .modal-body .form-select:focus {
    box-shadow: 0 0 5px #28a745;
    border-color: #28a745;
  }

  /* Adjust Delete icon spacing */
  .delete-icon-form {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    padding: 4px;
    z-index: 1;
    cursor: pointer;
  }
  .delete-icon {
    color: #dc3545;
    stroke: #dc3545;
    background: white;
    border-radius: 50%;
    padding: 2px;
    transition: all 0.25s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  }
  .delete-icon:hover {
    background: #dc3545;
    stroke: white;
    transform: scale(1.15);
  }

.pharmacy-product-data {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
  font-weight: 600;
  color: #28a745;
  font-size: 0.75rem; /* slightly larger */
}
.pharmacy-product-data h5 {
  margin: 0;
}

</style>

<div class="container1">
  <h1>Manage My Pharmacy</h1>

  <%= simple_form_for [:pharmacist, @pharmacy] do |f| %>
    <div class="pharmacy-details">
      <h2>Pharmacy Details</h2>
      <div class="form-grid">
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :description, as: :text, input_html: { rows: 4 } %>
      </div>
      <div style="margin-top:16px;">
        <%= f.button :submit, "Update Pharmacy", class: "btn btn-primary btn-theme-blue form-submit" %>
      </div>
    </div>
  <% end %>

  <div class="flex-between">
    <h2>My Products</h2>
    <button
  type="button"
  class="btn btn-success btn-theme"
  data-bs-toggle="modal"
  data-bs-target="#addProductModal"
>
  Add New Product
</button>
  </div>

  <div class="products-grid">
    <% @pharmacy.pharmacy_products.includes(:product).each_with_index do |pharmacy_product, index| %>
      <% product = pharmacy_product.product %>
      <div class="product-card" style="position: relative;">
        <!-- Delete icon -->
        <%= button_to pharmacist_pharmacy_pharmacy_product_path(@pharmacy, pharmacy_product),
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this product?" },
            class: "delete-icon-form",
            title: "Delete product" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="delete-icon" width="24" height="24" fill="none"
               stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6m5 0V4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v2"></path>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
          </svg>
        <% end %>

        <% if product.images.attached? %>
          <%= cl_image_tag product.images.first.key, transformation: [{ width: 300, height: 200, crop: "fill" }], class: "product-image" %>
        <% else %>
          <%= image_tag "https://via.placeholder.com/300x200?text=No+Image", class: "product-image" %>
        <% end %>

        <h3><%= product.name %></h3>
        <p class="product-description"><%= truncate(product.description, length: 60) %></p>
        <div class="pharmacy-product-data">
          <h3>Price: £<%= number_to_currency(pharmacy_product.price, unit: "", precision: 2) %></h3>
          <h3>Quantity: <%= pharmacy_product.quantity %></h3>
        </div>
        <button
          type="button"
          class="btn btn-primary btn-theme-blue"
          data-bs-toggle="modal"
          data-bs-target="#editProductModal<%= index %>">
          Edit Product
        </button>
      </div>
    <% end %>
  </div>

<!-- Edit Product Modals -->
<% @pharmacy.pharmacy_products.each_with_index do |pharmacy_product, index| %>
  <% product = pharmacy_product.product %>
  <div
    class="modal fade"
    id="editProductModal<%= index %>"
    tabindex="-1"
    aria-labelledby="editProductModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editProductModalLabel">Edit Product: <%= product.name %></h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [:pharmacist, @pharmacy, pharmacy_product], html: { multipart: true } do |f| %>
            <%= f.association :product, collection: [product], input_html: { disabled: true } %>
            <%= f.input :price, label: "Price (£)" %>
            <%= f.input :quantity %>
            <%= f.input :images, as: :file, input_html: { multiple: true }, label: "Upload Images" %>
            <div style="margin-top:12px;">
              <%= f.button :submit, "Update", class: "btn btn-success btn-theme form-submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div
  class="modal fade"
  id="addProductModal"
  tabindex="-1"
  aria-labelledby="addProductModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [:pharmacist, @pharmacy, PharmacyProduct.new], html: { multipart: true } do |f| %>
          <%= f.association :product, collection: Product.all, prompt: "Select existing product" %>
          <%= f.input :price, label: "Price (£)" %>
          <%= f.input :quantity %>
          <%= f.input :images, as: :file, input_html: { multiple: true }, label: "Upload Images" %>
          <div class="modal-footer" style="margin-top:12px;">
            <%= f.button :submit, "Add Product", class: "btn btn-success btn-theme" %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
